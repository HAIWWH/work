<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#abe3ff"
    android:orientation="vertical">
  <ImageView
      android:layout_marginTop="60dp"
      android:layout_width="150dp"
      android:layout_height="150dp"
      android:src="@drawable/ceju"
      android:layout_gravity="center"
      />
    <TextView
        android:id="@+id/front_distance_tv"
        android:layout_marginTop="8dp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/chat_edit_text"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/left_distance"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/chat_edit_text"/>
     <TextView
         android:id="@+id/right_distance_tv"
         android:layout_width="100dp"
         android:layout_height="match_parent"
         android:background="@drawable/chat_edit_text"
         android:layout_marginLeft="70dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/ranging_bt"
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="测距"
        android:layout_gravity="center"
        android:background="@drawable/app_list_corner_round"/>
</LinearLayout>
