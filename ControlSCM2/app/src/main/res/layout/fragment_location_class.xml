<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ABE3FF"
    android:orientation="vertical">
    <ImageView
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_marginTop="20dp"
        android:background="@drawable/location"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/latitude_longitude_and_time_lv"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/chat_edit_text"
    />
    <Button
        android:id="@+id/get_latitude_and_longitude_bt"
        android:layout_marginTop="10dp"
        android:padding="3dp"
        android:paddingTop="2dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/app_list_corner_round"
        android:text="获取经纬度"
        android:textSize="20dip"
        /> <Button
    android:id="@+id/get_time_bt"
    android:layout_marginTop="2dp"
    android:layout_width="200dp"
    android:padding="3dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/app_list_corner_round"
    android:text="获取卫星时间"
    android:textSize="20dip"
    />
    <Button
    android:id="@+id/get_longitude_bt"
    android:layout_width="200dp"
    android:padding="3dp"
    android:layout_marginTop="2dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/app_list_corner_round"
    android:text="获取海拔高度"
    android:textSize="20dip"
    />
    <Button
        android:id="@+id/get_all_data"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dark_blue_background"
        android:text="获取所有数据"
        android:textSize="20dip"
        android:textColor="#fff"
        />

</LinearLayout>
